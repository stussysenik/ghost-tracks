# Ghost Tracks - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Map Configuration
# =============================================================================

# Mapbox access token (get free at mapbox.com - 50k loads/month free tier)
VITE_MAPBOX_ACCESS_TOKEN=pk.your_token_here

# =============================================================================
# OPTIONAL: AI Provider Configuration
# =============================================================================

# AI provider to use: glm, gemini, kimi, claude (default: glm)
AI_PROVIDER=glm

# GLM-4.7 API key (default provider)
GLM_API_KEY=

# Google Gemini API key
GEMINI_API_KEY=

# Kimi K2.5 API key
KIMI_API_KEY=

# Anthropic Claude API key
ANTHROPIC_API_KEY=

# =============================================================================
# OPTIONAL: App Configuration
# =============================================================================

# Public URL for share links (defaults to Vercel deployment URL)
PUBLIC_APP_URL=

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode for verbose logging
DEBUG=false

# =============================================================================
# Backend Configuration
# =============================================================================

# Python backend URL (FastAPI service for route generation)
BACKEND_URL=http://127.0.0.1:8000

# Shape validation similarity threshold (0-100)
SHAPE_VALIDATION_THRESHOLD=45

# Max retries for failed shape validation
MAX_GENERATION_RETRIES=2
